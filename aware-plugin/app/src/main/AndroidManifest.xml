<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.moodtracker"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />



    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.Aware"
        tools:replace="android:icon, android:theme">

        <service android:name="com.aware.plugin.moodtracker.FacePhoto" android:exported="true" />
        <service android:name="com.aware.plugin.moodtracker.Plugin" android:exported="true" />
        <activity android:name="com.aware.plugin.moodtracker.Settings" android:exported="true" android:theme="@style/Theme.Aware" />

    </application>
    <provider android:name="com.aware.plugin.moodtracker.Provider"
        android:authorities="${applicationId}.provider.plugin.moodtracker"
        android:exported="true"
        android:readPermission="com.aware.READ_CONTEXT_DATA"
        android:writePermission="com.aware.WRITE_CONTEXT_DATA"/>
    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="face" />
</manifest>
